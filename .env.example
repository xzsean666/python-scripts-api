# Optional auth (JWT)
SCRIPT_JWT_AUTH=false

# If SCRIPT_JWT_AUTH=true, you must set SCRIPT_JWT_SECRET (HS256)
SCRIPT_JWT_SECRET=change_me
SCRIPT_JWT_ISS=quant-script-api
SCRIPT_JWT_AUD=quant-internal
SCRIPT_JWT_EXPIRE_SECONDS=3600

# Optional: enable admin-token issuance endpoint (/v1/auth/admin/token)
SCRIPT_JWT_ADMIN_SECRET=change_me_too

# Server settings (CLI flags override these)
SCRIPT_HOST=127.0.0.1
SCRIPT_PORT=8000

# Optional: API prefix
SCRIPT_API_PREFIX=/v1
